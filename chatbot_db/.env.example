# OpenAI
OPENAI_API_KEY=sk-...

# Embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Chroma server settings (container)
CHROMA_HOST=0.0.0.0
CHROMA_PORT=8000
CHROMA_PATH=/chroma

# Ingestion target collection
CHROMA_COLLECTION=books

# Path to your CSV inside the container
CSV_PATH=/app/data/BooksDataset.csv

# Ingest batching
INGEST_BATCH_SIZE=128
